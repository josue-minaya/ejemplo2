@{

    Layout = null;
}
@model menu_digital_sql.Models.platos
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Administrador</title>
    <link rel="icon" type="image/png" href="https://scontent.flim11-1.fna.fbcdn.net/v/t1.0-9/90233766_2869279206443019_4994240537893535744_o.png?_nc_cat=100&_nc_sid=8024bb&_nc_ohc=PsKB5_ewQcIAX8tLCYS&_nc_ht=scontent.flim11-1.fna&oh=8b3269503d7797522575732ce36f7f82&oe=5EA0326E" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css/menu.css" rel="stylesheet" />
    <link href="~/Content/css/admin.css" rel="stylesheet" />

</head>
<body>

    @Html.Partial("menu_admin")
    <div class="pr-4 pl-2 content-platos">
        <h2 class="text-center p-4">Lista de platos simples</h2>
        @if (ViewData["successPassAdmin"] != null && ViewData["successPassAdmin"].ToString() == "5")
        {
            @Html.Partial("alert-success")
        }
        <table class="table table-striped table-responsive-lg table-hover">

            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Titulo</th>

                    <th scope="col">Descripción</th>

                    <th scope="col">Precio</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acción</th>

                </tr>
            </thead>
            @{
                int j = 1;
            }

            <tbody>
                @foreach (var c in Model.simple)
                {


                <tr>
                    <td>@j</td>
                    <td>@c.titulo_cat</td>
                    <td>@c.titulo</td>
                    <td>@c.descripcion</td>
                    <td>@c.precio</td>

                    @if (@c.estado == 1)
                    {
                        <td class="text-center" >
                          @Html.ActionLink("Activo", "Eliminar_simple", "Home", new { id = c.id_producto,estado=0 }, new { @class = "delete" })
                           
                        </td>

                    }
                    else
                    {
                <td class="text-center">
                    @Html.ActionLink("Inactivo", "Eliminar_simple", "Home", new { id = c.id_producto,estado=1 }, new { @class = "delete_inac" })

                </td>
                    }


                <td>
                    @Html.ActionLink("Editar", "Editar_simple", "Home", new { id = c.id_producto }, new { @class = "" })
                </td>
                    
                </tr>
                    j++;
                }
            </tbody>
        </table>

        <h2 class="text-center p-5">Lista de platos múltiples</h2>
       
        <table class="table table-striped table-responsive-lg table-hover">

            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Titulo</th>

                    <th scope="col">Descripción</th>
                    <th scope="col">Titulo_sub</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acción</th>

                </tr>
            </thead>
            @{
                int r = 1;
            }

            <tbody>
                @foreach (var c in Model.multiple)
                {


                <tr>
                    <td>@r</td>
                    <td>@c.titulo_cat</td>
                    <td>@c.titulo</td>
                    <td>@c.descripcion</td>
                    <td>@c.titulo_sub</td>
                    <td>@c.precio_sub  </td>
                    <td>@c.estado</td>
                    @if (@c.estado == 1)
                    {
                <td class="text-center">
                    @Html.ActionLink("Activo", "Eliminar_simple", "Home", new { id = c.id_producto, estado = 0 }, new { @class = "delete" })

                </td>

                    }
                    else
                    {
                <td class="text-center">
                    @Html.ActionLink("Inactivo", "Eliminar_simple", "Home", new { id = c.id_producto, estado = 1 }, new { @class = "delete_inac" })

                   
                </td>
                    }


                <td>
                    @Html.ActionLink("Editar", "EditarMultiple", "Home", new { id = c.id_sub_producto }, new { @class = "" })
                </td>

                </tr>
                    r++;
                }
            </tbody>
        </table>

    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>